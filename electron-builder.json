{
  "productName": "Panel2Re",
  "appId": "org.cn.asoulrecreationplan.panel2re",
  "copyright": "Copyright Â© 2025 A-SOUL Re-Creation Plan",
  "asar": true,
  "icon": "public/favicon.ico",
  "directories": {
    "output": "electron_packed/${version}"
  },
  "files": ["dist", "electron", "public"],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "deleteAppDataOnUninstall": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Panel2Re",
    "runAfterFinish": true
  },
  "win": {
    "icon": "public/favicon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}"
  },
  "mac": {
    "icon": "public/favicon.ico",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64", "universal"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64", "universal"]
      }
    ],
    "artifactName": "${productName}-AppleMacOSX-${version}-Package.${ext}"
  },
  "linux": {
    "icon": "public/favicon.ico",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-LinuxDesktop-${version}-AppImage.${ext}"
  }
}
